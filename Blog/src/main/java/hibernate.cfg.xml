<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mydb</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.use_sql_comments">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.hbm2ddl.auto">create</property>
  <mapping class="com.letsdevlope.models.Blog"/>
  <mapping class="com.letsdevlope.models.Comment"/>
  <mapping class="com.letsdevlope.models.Skill"/>
  <mapping class="com.letsdevlope.models.Tag"/>
  <mapping class="com.letsdevlope.models.User"/>
  <mapping class="com.letsdevlope.models.TagId"/>
  <mapping class="com.letsdevlope.models.SkillId"/>
  <mapping class="com.letsdevlope.models.CommentId"/>
 </session-factory>
</hibernate-configuration>
